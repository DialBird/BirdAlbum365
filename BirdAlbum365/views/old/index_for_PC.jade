doctype html
html(lang="ja")
head
    meta(charset="UTF-8")
    meta(name="viewport",content="width=device-width,initial-scale=1")
    title jade
    link(rel="stylesheet",href="build/page2/css/style_for_PC.css",type="text/css")
    link(href='https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:400,900italic',rel='stylesheet',type='text/css')
    script(src="//code.jquery.com/jquery-1.12.0.min.js")
    script(src=" https://code.createjs.com/createjs-2015.11.26.min.js")
    script(src="https://cdn.socket.io/socket.io-1.2.0.js")
    script(src="lib/js/plugin/jquery.qrcode.min.js")
    script(src="lib/js/three/three.min.js")
    script(src="lib/js/three/OrbitControls.js")
    script(src="lib/js/three/tween.min.js")
    script(src="lib/js/three/ColladaLoader.js")
body
    div#wrapper
        button#a a
        button#b b
        button#c c
        button#d d
        button#sound sound
        button#loop loop
        h1#title Bird Album
        div#canvas
        div#canvas_cover
        div#qrcode2
        //鳥の説明画像
        div.bird_introduction_window
            h2#birdName
            div#birdImageBlock
            button#back_to_select_btn OK
        //roomIDの取得
        input#roomID(type="hidden",value="<%= roomID%>")
        //このデバイス名を取得する場所
        input#thisDevice(type="hidden",value="PC")
    script(src="build/page2/js/page2.min.js")